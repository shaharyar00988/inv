<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete <span id="deleteItemName"></span>?</p>
        <p class="text-danger" id="deleteWarningText"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form id="deleteForm" method="POST" class="d-inline">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
function showDeleteConfirmation(itemName, deleteUrl, warningText = '') {
  const modal = document.getElementById('deleteConfirmationModal');
  const deleteItemName = document.getElementById('deleteItemName');
  const deleteWarningText = document.getElementById('deleteWarningText');
  const deleteForm = document.getElementById('deleteForm');
  
  deleteItemName.textContent = itemName;
  deleteWarningText.textContent = warningText;
  deleteForm.action = deleteUrl;
  
  new bootstrap.Modal(modal).show();
}
</script> 